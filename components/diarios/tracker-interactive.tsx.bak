
'use client';

import React, { useState, useEffect } from 'react';
import { motion, AnimatePresence } from 'framer-motion';
import { TrackerSection, TrackerCell, TrackerCellState } from '@/lib/diary-types';

interface TrackerInteractiveProps {
  section: TrackerSection;
  onCellClick: (cellId: string, newState: TrackerCellState) => void;
  readonly?: boolean;
}

const CELL_COLORS = {
  empty: 'bg-white/50 hover:bg-white/70',
  partial: 'bg-hogara-gold/40 hover:bg-hogara-gold/60',
  completed: 'bg-hogara-gold hover:bg-hogara-gold/90',
};

export function TrackerInteractive({ section, onCellClick, readonly = false }: TrackerInteractiveProps) {
  const [hoveredCell, setHoveredCell] = useState<string | null>(null);

  const handleCellClick = (cell: TrackerCell) => {
    if (readonly) return;

    // Ciclo de estados: empty -> partial -> completed -> empty
    const nextState: TrackerCellState =
      cell.state === 'empty'
        ? 'partial'
        : cell.state === 'partial'
        ? 'completed'
        : 'empty';

    onCellClick(cell.id, nextState);
  };

  return (
    <div className="w-full h-full p-6">
      {/* Título de la sección */}
      <div className="mb-6">
        <h3 className="text-2xl font-serif text-hogara-gray mb-2">{section.title}</h3>
        <div className="h-1 w-20 bg-gradient-to-r from-hogara-gold to-hogara-pink rounded-full" />
      </div>

      {/* Grid de celdas */}
      <div
        className="grid gap-2"
        style={{
          gridTemplateColumns: `repeat(${section.cols}, minmax(0, 1fr))`,
        }}
      >
        {section.cells.map((cell) => (
          <motion.button
            key={cell.id}
            className={`
              aspect-square rounded-lg border-2 border-hogara-gray/20
              transition-all duration-300 relative overflow-hidden
              ${CELL_COLORS[cell.state]}
              ${readonly ? 'cursor-not-allowed' : 'cursor-pointer'}
              ${hoveredCell === cell.id ? 'scale-110 shadow-lg z-10' : ''}
            `}
            onClick={() => handleCellClick(cell)}
            onMouseEnter={() => setHoveredCell(cell.id)}
            onMouseLeave={() => setHoveredCell(null)}
            whileTap={readonly ? {} : { scale: 0.95 }}
            disabled={readonly}
            aria-label={`Celda ${cell.row}-${cell.col}: ${cell.state}`}
          >
            {/* Efecto de brillo al hover */}
            {hoveredCell === cell.id && !readonly && (
              <motion.div
                className="absolute inset-0 bg-gradient-to-br from-white/40 to-transparent"
                initial={{ opacity: 0 }}
                animate={{ opacity: 1 }}
                exit={{ opacity: 0 }}
              />
            )}

            {/* Marca de completado */}
            <AnimatePresence>
              {cell.state === 'completed' && (
                <motion.div
                  className="absolute inset-0 flex items-center justify-center text-white text-2xl"
                  initial={{ scale: 0, rotate: -180 }}
                  animate={{ scale: 1, rotate: 0 }}
                  exit={{ scale: 0, rotate: 180 }}
                  transition={{ type: 'spring', stiffness: 200, damping: 15 }}
                >
                  ✓
                </motion.div>
              )}
              {cell.state === 'partial' && (
                <motion.div
                  className="absolute inset-0 flex items-center justify-center text-hogara-gold text-xl"
                  initial={{ scale: 0 }}
                  animate={{ scale: 1 }}
                  exit={{ scale: 0 }}
                >
                  •
                </motion.div>
              )}
            </AnimatePresence>

            {/* Label de la celda */}
            {cell.label && (
              <div className="absolute bottom-0 left-0 right-0 text-[8px] text-hogara-gray/60 text-center truncate px-1">
                {cell.label}
              </div>
            )}
          </motion.button>
        ))}
      </div>

      {/* Leyenda */}
      <div className="mt-6 flex items-center justify-center gap-4 text-sm text-hogara-gray/70">
        <div className="flex items-center gap-2">
          <div className="w-4 h-4 rounded border-2 border-hogara-gray/20 bg-white/50" />
          <span>Pendiente</span>
        </div>
        <div className="flex items-center gap-2">
          <div className="w-4 h-4 rounded border-2 border-hogara-gray/20 bg-hogara-gold/40">
            <div className="flex items-center justify-center h-full text-xs">•</div>
          </div>
          <span>Parcial</span>
        </div>
        <div className="flex items-center gap-2">
          <div className="w-4 h-4 rounded border-2 border-hogara-gray/20 bg-hogara-gold text-white flex items-center justify-center text-xs">
            ✓
          </div>
          <span>Completado</span>
        </div>
      </div>
    </div>
  );
}
